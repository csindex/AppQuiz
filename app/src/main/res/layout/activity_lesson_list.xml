<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/clouds12"
        android:scaleType="fitXY"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/cl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cl1"
        android:src="@drawable/clouds12"
        android:scaleType="fitXY"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/children"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LessonListActivity">

        <LinearLayout
            android:gravity="center_vertical"
            android:onClick="goToAlphabets"
            android:background="@drawable/bg_btn_start"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALPHABETS"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:onClick="goToSenses"
            android:background="@drawable/bg_btn_start"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SENSES"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:onClick="goToNumbers"
            android:background="@drawable/bg_btn_start"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMBERS"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!--<LinearLayout
            android:gravity="center_vertical"
            android:onClick="gotoAbakadaActivity"
            android:background="@drawable/layout_bg"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABAKADA"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textAlignment="center"/>
        </LinearLayout>-->

        <LinearLayout
            android:gravity="center_vertical"
            android:onClick="gotoBodyParts"
            android:background="@drawable/bg_btn_start"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BODY PARTS"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
