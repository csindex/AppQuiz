<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baby_squid_white"
    tools:context=".newfeature.bodypartsfeature.MyBodyPartsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_body_parts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/body_parts_2"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/children"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_body_parts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_body_parts"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/row_body_parts_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>